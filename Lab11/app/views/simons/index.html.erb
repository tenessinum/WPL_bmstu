<p id="notice"><%= notice %></p>
<h1>Гипотеза Симона</h1>
<div>
    <%= link_to 'Произвести новый расчет', new_simon_path, class: 'btn btn-link btnsm' %>
</div>
<br/>
<table>
    <thead align="center">
        <tr>
            <th>Введено</th>
            <th>Результат</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @simons.each do |simon| %>
            <tr>
                <td><%= simon.max_n %></td>
                <td><%= simon.result %></td>
                <td><%= link_to 'Посмотреть', simon, class: 'btn btn-link btn-sm'%></td>
                <td><%= button_to 'Удалить', simon, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-link btn-sm' %></td>
            </tr>
        <% end %>
    </tbody>
</table>